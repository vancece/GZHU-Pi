/* 书本基础信息 */

.book {
  padding: 10rpx;
  color: rgba(218, 218, 218, 0.8)
}

.book-name {
  font-weight: bold;
  color: rgb(41, 36, 36);
  padding: 5rpx;
  text-align: center;
}

.book-info {
  display: flex;
  flex-direction: row;
}

.book-info .cover {
  flex: 2;
  display: flex;
  align-items: center;
}

.cover image {
  width: 100%;
  height: 350rpx;
}

.book-info .info {
  flex: 3;
  padding: 15rpx;
  font-size: 85%;
  color: rgb(44, 43, 43);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.info text {
  color: rgb(95, 95, 95);
}

/* 标签 */

.tags {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  font-size: 70%;
  margin: 5rpx 20rpx;
  color: #388ec8;
}

.tags view {
  border-radius: 20rpx;
  line-height: 35rpx;
  padding: 5rpx 15rpx;
  margin: 5rpx;
  background: #ccf5ff;
}

.more {
  margin: 10rpx 20rpx;
}

/* 细节标题 */

.detail-title {
  margin: 40rpx 0 20rpx 0rpx;
  font-weight: bold;
  color: rgb(36, 36, 36);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.detail-title .dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #f7c35c;
  margin: 15rpx;
}

/* 馆藏信息 */

.holdings {
  display: flex;
  flex-direction: column;
  font-size: 80%;
  text-align: center;
  border: 2rpx solid #f7c35c;
  border-radius: 20rpx;
}

.holdings .header {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 12rpx;
  background: #f7c35c;
  border-radius: 18rpx 18rpx 0 0;
  color: white;
}

.holdings .item {
  display: flex;
  flex-direction: row;
  padding: 15rpx 10rpx;
  font-size: 80%;
  border-top: 1rpx solid #f7c35c;
}

.summary .text, .author_intro .text, .catalog .text {
  font-size: 80%;
  margin: 0 40rpx;
}

/* 豆瓣评分 */

.rating {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.rating .average {
  display: flex;
  flex-direction: column;
  font-size: 150%;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 50rpx 20rpx 0rpx;
  color: rgb(36, 36, 36);
}

.star {
  background: url("https://img3.doubanio.com/f/shire/680a4bc4c384199245b080c7104da5be8ed717d3/pics/rating_icons/ic_rating_m.png") no-repeat;
  width: 150px;
  height: 30px;
  background-size: 100%;
}
