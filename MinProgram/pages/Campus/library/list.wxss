page {
  background: #ecececf1;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 400rpx;
  height: 70rpx;
  border-radius: 35rpx;
  border: 2rpx solid #1f73c7;
  margin-right: 100rpx;
  position: relative;
}

.search-box input {
  flex: 3;
  padding: 10rpx 40rpx;
  text-align: center;
}

.search-box .search-btn {
  flex: 1;
  height: 100%;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #1f73c7;
  border-radius: 0 30rpx 30rpx 0rpx;
  border: 2rpx solid #1f73c7;
}

button::after {
  border: 0;
}

.search-btn image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.search-btn-hover {
  opacity: 0.8;
}

/* 书本列表 */

.book {
  /* border-bottom: 1rpx solid #ddd; */
  margin: 15rpx;
  padding: 5rpx;
  /* border: 1rpx solid red; */
  border-radius: 20rpx;
  background: white;
  box-shadow: 3rpx 3rpx 5rpx 5rpx #f2f2f2f2;
}

.book-name {
  padding: 10rpx 20rpx;
  color: rgb(75, 15, 15);
}

.book-info {
  display: flex;
  flex-direction: row;
}

.cover {
  flex: 2.5;
  height: 250rpx;
  /* border: 1rpx solid rgb(33, 71, 141); */
  padding: 10rpx;
}

.book-info image {
  width: 100%;
  height: 100%;
  /* border: 1rpx solid red; */
}

.info {
  flex: 5;
  /* border: 1rpx solid rgb(61, 61, 61); */
  padding: 15rpx;
  margin-left: 30rpx;
  position: relative;
}

.info .author {
  font-size: 80%;
  color: grey;
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.info .pub {
  font-size: 80%;
  color: grey;
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.call-No {
  margin: 15rpx 0;
  color: rgb(141, 83, 83);
  font-size: 90%;
}

.info .collection {
  position: absolute;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 85%;
  /* border: 1rpx solid rgb(209, 32, 32); */
}

.collection view {
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  margin: 0rpx 10rpx;
}

.switch-page {
  /* border: 1rpx solid rgb(209, 32, 32); */
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 100rpx;
  color: grey;
  font-size: 85%;
}

.switch-page image {
  width: 70rpx;
  height: 70rpx;
}
