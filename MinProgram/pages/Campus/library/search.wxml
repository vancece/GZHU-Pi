<navBar occupy="{{false}}" title="" titleColor="#dadada"></navBar>

<view class='lib-bg'>
  <image mode='widthFix' style='width:80%' src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/campus/library-title.png'></image>
  <image src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/icon/wave.gif' class='gif-wave'></image>
</view>

<!-- 搜索框 -->
<form bindsubmit='formSubmit' report-submit='{{true}}'>
  <view class='search-box'>
    <input name="query" placeholder='书籍名称'></input>
    <button formType="submit" class='search-btn' hover-class='search-btn-hover' hover-stay-time='0.2s'>
      <image src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/icon/search-white.svg'></image>
      <view>检索</view>
    </button>
  </view>
</form>

<view class='nav'>
  <view class='item' bindtap='nav' id='room'>
    <image src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/icon/lib-dist.svg'></image>
    <view>库室分布</view>
  </view>
  <view class='item' bindtap='nav' id='open'>
    <image src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/icon/lib-classify.svg'></image>
    <view>开放时间</view>
  </view>
  <view class='item' bindtap='nav' id='visit'>
    <image src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/icon/lib-data.svg'></image>
    <view>进馆数据</view>
  </view>
  <view class='item' bindtap='nav' id='overall'>
    <image src='cloud://gzhu-pi-f63be3.677a-gzhu-pi-f63be3/images/icon/lib-overall.svg'></image>
    <view>360全景</view>
  </view>
</view>

<view class='visit'>
  <view>
    <text>大学城总馆：</text>
    <text style='color:#1f73c7;'>{{lib.master}}</text> 人次
  </view>
  <view>
    <text>桂花岗分馆：</text>
    <text style='color:#1f73c7;'>{{lib.branch}}</text> 人次
  </view>
</view>

