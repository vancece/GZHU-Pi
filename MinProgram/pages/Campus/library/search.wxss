/* 页面背景 */

.lib-bg {
  background: url(http://lib.gzhu.edu.cn/w/static/WebUI/images/body.jpg);
  background-color: #065099;
  background-size: 100% 450rpx;
  height: 420rpx;
  padding-top: 40rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lib-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

/* 搜索框 */

form {
  margin-top: 100rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 600rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: 2rpx solid #1f73c7;
}

.search-box input {
  flex: 2;
  font-size: 105%;
  padding: 10rpx 40rpx;
  text-align: center;
}

.search-box .search-btn {
  flex: 1;
  height: 100%;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #1f73c7;
  border-radius: 0 40rpx 40rpx 0rpx;
  border: 2rpx solid #1f73c7;
}

button::after {
  border: 0;
}

.search-btn image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.search-btn-hover {
  opacity: 0.8;
}

/* 进馆人次 */

.visit {
  text-align: center;
  margin: 20rpx;
  font-weight: bold;
  color: rgba(39, 39, 39, 0.8);
  font-size: 85%;
}

/* 功能导航 */

.nav {
  font-size: 85%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 50rpx 75rpx;
  color: rgba(39, 39, 39, 0.8);
}

.item {
  width: 260rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav image {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx 0;
}
