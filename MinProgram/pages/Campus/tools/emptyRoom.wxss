/* 搜索框 */

form {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #a6e3e9;
  width: 100%;
}

.search-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 550rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #acc6aa;
}

.search-box input {
  flex: 4;
  font-size: 90%;
  padding: 10rpx 30rpx;
  text-align: center;
}

.search-box .search-btn {
  flex: 1;
  height: 100%;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #acc6aa;
  border-radius: 0 35rpx 35rpx 0rpx;
  border: 2rpx solid #acc6aa;
}

button::after {
  border: 0;
}

.search-btn image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}

.search-btn-hover {
  opacity: 0.8;
}

/* 总数 */

.total {
  height: 120rpx;
  font-size: 120%;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: #a6e3e9;
}

.filter {
  position: absolute;
  right: 50rpx;
  line-height: 50rpx;
  font-size: 70%;
  padding: 5rpx 20rpx;
  font-weight: normal;
  border-radius: 20rpx;
  color: white;
  background: rgba(245, 170, 30, 0.658);
}

/* 教室 */

.room {
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 30rpx 30rpx 30rpx;
}

.room .p1 {
  font-size: 85%;
  color: grey;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.room .p2 {
  flex: 1;
}

.title {
  font-weight: bold;
  padding: 10rpx;
  width: 100%;
  color: rgb(88, 88, 88);
}

/* 弹窗 */

.selection {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  text-align: center;
  margin-bottom: 20rpx;
}

.selection .week {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid orange;
  margin: 10rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 90%;
}

.selection .weekday, .time {
  width: 130rpx;
  border: 1rpx solid orange;
  padding: 12rpx;
  margin: 10rpx;
  border-radius: 20rpx;
}
