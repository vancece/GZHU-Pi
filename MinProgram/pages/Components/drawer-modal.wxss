/* 遮罩层 */

.mask {
  height: 100%;
  width: 100%;
  position: fixed;
  z-index: 1002;
  top: 0;
  left: 0;
  transition: all 0.3s ease-in-out 0s;
  /* 鼠标穿透当前元素 */
  pointer-events: none;
}

.mask.show {
  background-color: rgba(17, 17, 17, 0.3);
  pointer-events: auto;
}

/* 内容区域 */

.modal-content {
  display: inline-block;
  width: 60%;
  height: 100%;
  transition: 0.5s;
  transform: translateX(-100%);
}

.modal-content.show {
  transform: translateX(0%);
}

/* 关闭 */

.cancel-img {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  padding: 25rpx;
  background-color: rgba(200, 200, 200, 0.8);
  position: fixed;
  bottom: 2%;
  right: 10rpx;
  transition: 0.7s;
  transform: rotate(180deg);
}

.cancel-img.show {
  transform: rotate(0deg) translateX(-10%);
}
